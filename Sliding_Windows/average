
def sliding_window_avg(arr, k):

    n = len(arr)

    if k <= 0 or k > n:
        raise ValueError("k must be between 1 and len(arr)")
    
    window_sum = sum(arr[:k])
    result = [window_sum/k]

    for i in range(k, n):
        window_sum += arr[i]
        window_sum -= arr[i-k]
        result.append(window_sum/k)

    return result